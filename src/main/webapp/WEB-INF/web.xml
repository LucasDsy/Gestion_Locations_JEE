<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

        <filter>
            <filter-name>AccessFilter</filter-name>
            <filter-class>servlet.AccessFilter</filter-class>
        </filter>

        <filter-mapping>
            <filter-name>AccessFilter</filter-name>
            <url-pattern>/pages/*</url-pattern>
            <dispatcher>REQUEST</dispatcher>
            <dispatcher>FORWARD</dispatcher>
        </filter-mapping>

        <servlet>
            <servlet-name>EmployeeLogin</servlet-name>
            <servlet-class>servlet.EmployeeLogin</servlet-class>
        </servlet>

        <servlet-mapping>
            <servlet-name>EmployeeLogin</servlet-name>
            <url-pattern>/login</url-pattern>
        </servlet-mapping>

        <servlet>
            <servlet-name>EmployeeDisconnect</servlet-name>
            <servlet-class>servlet.EmployeeDisconnect</servlet-class>
        </servlet>

        <servlet-mapping>
            <servlet-name>EmployeeDisconnect</servlet-name>
            <url-pattern>/disconnect</url-pattern>
        </servlet-mapping>

        <servlet>
            <servlet-name>Employee</servlet-name>
            <servlet-class>servlet.Employee</servlet-class>
        </servlet>

        <servlet-mapping>
            <servlet-name>Employee</servlet-name>
            <url-pattern>/createEmployee</url-pattern>
        </servlet-mapping>

</web-app>
